<div class="container mx-auto px-16 sm:px-8 lg:px-8 lg:pt-8">
  <ul role="list" class="divide-y divide-gray-100">
    <% @candidates.each do |candidate| %>
      <li class="flex items-center justify-between gap-x-6 py-5">
        <div class="flex min-w-0 gap-x-4">
          <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="https://randomuser.me/api/portraits/women/<%= candidate.id + 1 %>.jpg" alt="">
          <div class="min-w-0 flex-auto">
            <p class="text-sm font-semibold leading-6 text-white"><%= candidate.name %> <%= candidate.surname %></p>
            <p class="mt-1 truncate text-xs leading-5 text-white"><%= candidate.user.email %></p>
          </div>
        </div>
        <% job_application = candidate.job_applications.find_by(job_id: @job.id) %>
        <% if job_application %>
          <%= link_to "See #{candidate.name}'s interview", job_application_path(job_application), class: "rounded-full bg-white px-2.5 py-1 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <% else %>
          <p>No job application found for this candidate.</p>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
<%= job_applications.inspect %>
