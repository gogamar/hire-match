<%= content_for :title, 'Interview Transcript' %>
<div class="container mx-auto px-4 py-6">
  <h1 class="text-3xl font-bold mb-4 text-white">Interview Transcript for <%= @interview.job.title %></h1>
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-xl font-semibold mb-2">Candidate: <%= @interview.candidate.name %></h2>
    <p class="text-gray-700 mb-4">Interview Date: <%= @interview.created_at.strftime("%B %d, %Y") %></p>
    <h3 class="text-lg font-semibold mb-2">Questions and Answers</h3>
    <ul>
      <% @interview.questions.each do |question| %>
        <li class="mb-4">
          <p class="font-bold"><%= question.content %></p>
          <p class="text-gray-700"><%= question.answers.find_by(candidate_id: @interview.candidate_id).content %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
