<%= content_for :title, 'Job Applications' %>
<div class="container mx-auto px-4 py-6">
  <h1 class="text-3xl font-bold mb-4 text-white">Job Applications</h1>
  <% if @job_applications.present? %>
    <%= render "jobs/jobs", jobs: @jobs, color: @color %>
  <% else %>
    <p class="text-gray-500">You haven't applied to any jobs yet.</p>
  <% end %>
</div>
