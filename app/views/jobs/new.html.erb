<%= form_with(model: @job, local: true, class: "space-y-6") do |form| %>
  <div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-bold mb-4">New Job</h2>
    <!-- Title Field -->
    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Job Title" %>
    </div>
    <!-- Location Field -->
    <div class="mb-4">
      <%= form.label :location, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :location, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Job Location" %>
    </div>
    <!-- Company Field (Hidden or Pre-filled) -->
    <%= form.hidden_field :company_id, value: current_user.company.id if current_user.company? %>
    <!-- Submit Button -->
    <div class="flex items-center justify-between">
      <%= form.submit "Create Job", class: "inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>
