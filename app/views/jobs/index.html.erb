<ul role="list" class="divide-y divide-white/5">
  <% @jobs.each do |job| %>
    <li class="relative flex items-center space-x-4 py-4">
      <div class="min-w-0 flex-auto">
        <div class="flex items-center gap-x-3">
          <div class="flex-none rounded-full bg-gray-100/10 p-1 text-gray-500">
            <div class="h-2 w-2 rounded-full bg-current"></div>
          </div>
          <h2 class="min-w-0 text-sm font-semibold leading-6 text-white">
            <%= link_to interview_path(job.interview), class: "flex gap-x-2" do %>
              <span class="truncate"><%= job.title %></span>
              <span class="text-gray-400">/</span>
              <span class="whitespace-nowrap"><%= job.location %></span>
              <span class="absolute inset-0"></span>
            <% end %>
          </h2>
        </div>
        <div class="mt-3 flex items-center gap-x-2.5 text-xs leading-5 text-gray-400">
          <p class="whitespace-nowrap">
            Published <%= distance_of_time_in_words(job.created_at, Time.current) %> ago
          </p>
        </div>
      </div>
      <div class="flex-none rounded-full bg-gray-400/10 px-2 py-1 text-xs font-medium text-green-400 ring-1 ring-inset ring-gray-400/20">Preview</div>
      <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
      </svg>
    </li>
  <% end %>
</ul>
